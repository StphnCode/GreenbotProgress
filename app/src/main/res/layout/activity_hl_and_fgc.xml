<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="57dp"
        android:layout_height="58dp"
        android:background="#FFF"
        android:outlineProvider="none"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingBottom="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp" />

    <ImageView
        android:id="@+id/desWoman"
        android:layout_width="310dp"
        android:layout_height="252dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        app:srcCompat="@drawable/hl_img" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hotlineBtn"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_get_started"
        android:elevation="4dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Hotlines"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:translationZ="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desWoman" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/guidanceBtn"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle_bg_gray"
        android:elevation="2dp"
        android:fontFamily="@font/poppins_bold"
        android:text="for guidance consultation"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="17sp"
        android:translationZ="2dp"
        app:backgroundTint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotlineBtn" />

</LinearLayout>