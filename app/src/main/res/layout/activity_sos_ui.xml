<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".SOS_UI">

    <RelativeLayout
        android:layout_width="295dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        >

        <ImageView
            android:layout_width="260dp"
            android:layout_height="203.03dp"
            android:layout_marginLeft="17.5dp"
            app:srcCompat="@drawable/prof_img1" />

        <TextView
            android:id="@+id/txtYouPressed"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/poppins_bold"
            android:text="You pressed the button, it seems that you want a professional help?"
            android:textAlignment="center"
            android:textColor="#aa000000"
            android:textSize="17dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="350dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnYes"
                android:layout_width="133dp"
                android:layout_height="57dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_w_border"
                android:fontFamily="@font/poppins_bold"
                android:text="Yes"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNo"
                android:layout_width="133dp"
                android:layout_height="57dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_white_w_border"
                android:fontFamily="@font/poppins_bold"
                android:text="No"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:textSize="16dp" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>