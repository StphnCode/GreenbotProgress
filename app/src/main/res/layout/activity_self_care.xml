<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelfCare">

    <View
        android:id="@+id/selfcare"
        android:layout_width="match_parent"
        android:layout_height="170.13dp"
        android:layout_gravity="start"
        android:background="@drawable/bg_selfcare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selfcare" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="87dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="81dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="33dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Self-Care"
        android:textAlignment="center"
        android:textColor="#053f00"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/selfcare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/selfcare"
        app:layout_constraintTop_toTopOf="@+id/selfcare"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/btnLeftArrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/selfcare"
        app:layout_constraintTop_toTopOf="@+id/selfcare"
        app:srcCompat="@drawable/arrow_left" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/poppins"
        android:paddingLeft="15dp"
        android:text="Therapeutic Exercises"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider" />

    <ImageView
        android:id="@+id/BreathingExercise"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/menu_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="Breathing Exercise"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/BreathingExercise"
        app:layout_constraintTop_toTopOf="@+id/BreathingExercise" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_light"
        android:text="3 min"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="@+id/BreathingExercise"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintEnd_toEndOf="@+id/BreathingExercise"
        app:layout_constraintTop_toTopOf="@+id/BreathingExercise"
        app:srcCompat="@drawable/chevron_right" />

    <ImageView
        android:id="@+id/ThoughtPad"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/menu_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BreathingExercise" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins"
        android:text="Thought Pad"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/ThoughtPad"
        app:layout_constraintTop_toTopOf="@+id/ThoughtPad" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins"
        android:paddingLeft="15dp"
        android:text="On a scale of 1-5, how are you feeling today?"
        app:layout_constraintTop_toBottomOf="@+id/currentDate"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/emoji" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="268dp"
        android:layout_height="44dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="62dp"
        android:valueFrom="1"
        android:valueTo="5"
        android:stepSize="1"
        app:labelBehavior="gone"
        app:haloColor="#8BC34A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:thumbColor="#0EB500"
        app:tickColorInactive="#4CAF50"
        app:trackColorActive="#CDDC39"
        app:trackColorInactive="#AAE4A5" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintEnd_toEndOf="@+id/ThoughtPad"
        app:layout_constraintTop_toTopOf="@+id/ThoughtPad"
        app:srcCompat="@drawable/chevron_right" />

    <ImageButton
        android:id="@+id/btnCheckMood"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_get_started"
        android:src="@drawable/baseline_check_24"
        app:layout_constraintStart_toEndOf="@+id/slider"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <TextView
        android:id="@+id/txtRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/poppins_bold"
        android:text="1"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/slider"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />


</androidx.constraintlayout.widget.ConstraintLayout>