<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FCFCFC">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="311dp"
        android:layout_height="104dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Mental Health Hotlines"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/displayRectangle"
        android:layout_width="430dp"
        android:layout_height="550dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/hotlinerectangle"
        android:elevation="2dp"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/backBtnHot"
        android:layout_width="57dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#FFF"
        android:outlineProvider="none"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingBottom="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/threeDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="292dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/threedots" />

    <TextView
        android:id="@+id/lpmHealth"
        android:layout_width="364dp"
        android:layout_height="60dp"
        android:layout_marginTop="51dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Laguna Provincial Mental Health Helpline: \n(049) 502-0555 or 0919-077-2222"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/ncmHealthCrisis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/displayRectangle"
        app:layout_constraintVertical_bias="0.577" />

    <ImageView
        android:id="@+id/firstLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="146dp"
        android:layout_marginBottom="299dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/displayRectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/displayRectangle"
        app:layout_constraintVertical_bias="0.448"
        app:srcCompat="@drawable/line" />

    <TextView
        android:id="@+id/ncmHealthCrisis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="236dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="National Center for Mental Health Crisis Hotline: \n(0917) 899-8727 or (02) 8989-8727"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/displayRectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.705"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/displayRectangle" />

    <ImageView
        android:id="@+id/secondLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="218dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/displayRectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ncmHealthCrisis"
        app:layout_constraintVertical_bias="0.044"
        app:srcCompat="@drawable/line" />

    <TextView
        android:id="@+id/pmhaLaguna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="124dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Philippine Mental Health Association - Laguna Chapter: \n(049) 501-6571 or 0917-565-2036"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/displayRectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondLine"
        app:layout_constraintVertical_bias="0.044" />

    <ImageView
        android:id="@+id/thirdLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="123dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/displayRectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pmhaLaguna"
        app:srcCompat="@drawable/line" />





</androidx.constraintlayout.widget.ConstraintLayout>